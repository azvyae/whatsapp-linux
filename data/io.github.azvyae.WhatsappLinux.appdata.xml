<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>io.github.azvyae.WhatsappLinux</id>
  <name>WhatsApp Linux</name>
  <summary>WhatsApp for Linux, supports Wayland compositor automatically. Forked from Alberto Mimbrero's electron Whatsapp.</summary>

  <metadata_license>FSFAP</metadata_license>
  <project_license>MIT</project_license>

  <description>
    <p>With WhatsApp on the desktop, you can seamlessly sync all of your chats to your computer so that you can chat on whatever device is most convenient to you.</p>
    <p>NOTE: This wrapper is not verified by, affiliated with, or supported by WhatsApp Inc.</p>
  </description>

  <url type="bugtracker">https://github.com/azvyae/whatsapp-linux/issues</url>
  <url type="homepage">https://github.com/azvyae/whatsapp-linux</url>

  <requires>
    <display_length compare="ge">medium</display_length>
  </requires>

  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>

  <content_rating type="oars-1.1">
    <content_attribute id="social-chat">intense</content_attribute>
    <content_attribute id="social-info">intense</content_attribute>
    <content_attribute id="social-audio">intense</content_attribute>
    <content_attribute id="social-contacts">intense</content_attribute>
  </content_rating>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/azvyae/whatsapp-linux/main/data/screenshots/screenshot-1.png</image>
    </screenshot>
  </screenshots>

  <releases>
    <release version="1.0.0" date="2024-04-07">
      <description>
        <p>features:</p>
        <ul>
          <li>Electron based, simple.</li>
          <li>Closing window only minimizes it into tray.</li>
          <li>Wayland support!</li>
        </ul>
      </description>
    </release>
  </releases>

  <developer_name>Azvya Erstevan I</developer_name>
  <update_contact>azvyae@gmail.com</update_contact>
</component>